{% extends "base.html.twig" %}

{% block title %}Nouvelle catégorie{% endblock %}

{% block body %}
    {% if edit %}
        <h1>Modifier {{categorie.nom}}</h1>
    {% else %}
        <h1>Formulaire nouvelle catégorie</h1>
    {% endif %}


<div class="formContainer">
{{ form_start(form) }}

    <div class="row">
        <div class="col">
            {{ form_row(form.nom) }}
        </div> 
        <div class="my-custom-class-for-errors">
            {{ form_errors(form) }}
        </div>
    </div>
{{ form_end(form) }}
</div>
{% endblock %}