{% extends 'base.html.twig' %}

{% block title %}Liste des modules{% endblock %}

{% block body %}
    {% for message in app.flashes('success') %}
            
        <div class="flash-success">
            {{ message }}
        </div>

    {% endfor %}
    <h1>Liste des modules</h1>

    <a href="{{path('add_module')}}" class="btn">Nouveau module</a>

    <table class="tList">
        <thead>
            <tr>
                <th>Module</th>
                <th>Cat√©gorie</th>
                <th>modifications</th>
            </tr>
        </thead>
        <tbody>
            {% for module in modules %} 
           
            <tr>
                <td>{{module.nom}}</td>
                <td>{{module.categorie.nom}}</td>
                <td><a href="{{path('edit_module', {'id': module.id})}}"><i class="fa-regular fa-pen-to-square"></i></a> / <a href="{{path('delete_module', {'id' : module.id})}}"><i class="fa-regular fa-trash-can"></i></a></td>
            </tr> 
            
            {% endfor %}
        </tbody>
    </table>


{% endblock %}